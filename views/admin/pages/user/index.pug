extends ../../layouts/default.pug
include ../../mixin/search.pug
include ../../mixin/pagination.pug

block main
    if(messages.success)
        .alert.alert-success.alert-dismissible.fade.show.mb-4
            i.fas.fa-check-circle.me-2
            | #{messages.success}
            button(type="button" class="btn-close" data-bs-dismiss="alert")

    .d-flex.justify-content-between.align-items-center.mb-4
        h1.text-primary.mb-0
            i.fas.fa-users.me-2
            | Danh sách tài khoản người dùng 
    .card.shadow-sm.mb-4
        .card-header.bg-white.py-3
            .row.align-items-center
                .col-md-8
                    form#form-search.d-flex
                        .input-group
                            input(
                                type="text"
                                placeholder="Tìm kiếm tài khoản..."
                                name="keyword"
                                class="form-control"
                            )
                            button(type="submit" class="btn btn-primary")
                                i.fas.fa-search.me-1
                                | Tìm kiếm
                

        .card-body.p-0
            table.table.table-hover.align-middle.mb-0
                thead.bg-light
                    tr
                        th.text-center(width="5%") STT
                        th.text-center(width="15%") Avatar
                        th(width="25%") Họ tên
                        th(width="25%") Email
                        th.text-center(width="15%") Trạng thái
                        th.text-center(width="15%") Thao tác
                tbody
                    each record, index in records
                        tr
                            td.text-center #{index + 1}
                            td.text-center
                                if record.avatar
                                    img.rounded-circle.border.shadow-sm(
                                        src=record.avatar
                                        alt=record.fullName
                                        style="width: 50px; height: 50px; object-fit: cover;"
                                    )
                                else
                                    img.rounded-circle.border.shadow-sm(
                                        src='https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRMckiibVIjRJfXAkGf4dSv7JYQxBQug-2KCQ&s'
                                        alt=record.fullName
                                        style="width: 50px; height: 50px; object-fit: cover;"
                                    )
                            td
                                .fw-bold #{record.fullName}
                            td #{record.email}
                            td.text-center
                                if(record.status == "active")
                                    button(
                                        class="badge bg-success border-0"
                                        button-change-status
                                        data-status="active"
                                        data-id=record.id
                                    )
                                        i.fas.fa-check-circle.me-1
                                        | Hoạt động
                                else
                                    button(
                                        class="badge bg-danger border-0"
                                        button-change-status
                                        data-status="inactive"
                                        data-id=record.id
                                    )
                                        i.fas.fa-ban.me-1
                                        | Không hoạt động
                            td.text-center
                                a(
                                    href=`/admin/user/edit/${record.id}`
                                    class="btn btn-warning btn-sm me-1"
                                    title="Chỉnh sửa"
                                )
                                    i.fas.fa-edit Sửa
                                a(
                                    href=`/admin/user/delete/${record.id}`
                                    class="btn btn-danger btn-sm me-1"
                                    title="Chỉnh sửa"
                                )
                                    i.fas.fa-edit Xóa

        .card-footer.bg-white
            .row.align-items-center
                .col-md-6.text-muted
                    | Hiển thị #{pagination.limitItems} / #{pagination.totalItems} tài khoản
                .col-md-6
                    +pagination(pagination)