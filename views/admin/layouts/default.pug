doctype html 
html 
    head 
        title #{pageTitle}
        //-nhung bootstrap
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css")
        link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css")
        //-nhung Google Fonts
        link(rel="preconnect", href="https://fonts.googleapis.com")
        link(rel="preconnect", href="https://fonts.gstatic.com", crossorigin)
        link(href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700&family=Poppins:wght@300;400;500;600;700&display=swap", rel="stylesheet")
        //-nhung file public 
        link(rel="stylesheet", href="/admin/css/style.css")
        style.
            body {
                background-image: url('/images/background.jpg');
                background-size: cover;
                background-position: center;
                background-attachment: fixed; /* Giữ ảnh cố định khi cuộn trang */
                background-repeat: no-repeat;
                position: relative;
                min-height: 100vh;
                font-family: 'Poppins', sans-serif;
            }

            body::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background-color: rgba(255, 255, 255, 0.8); /* Overlay màu trắng với độ trong suốt 80% */
                z-index: -1;
            }

            /* Typography */
            h1, h2, h3, h4, h5, h6 {
                font-family: 'Montserrat', sans-serif;
                font-weight: 600;
                color: #333;
            }

            p {
                font-family: 'Poppins', sans-serif;
                color: #555;
                line-height: 1.6;
            }

            .table {
                font-family: 'Poppins', sans-serif;
            }

            .table th {
                font-weight: 600;
                font-size: 0.95rem;
            }

            .table td {
                font-size: 0.9rem;
            }

            /* Button Typography */
            .btn {
                font-family: 'Montserrat', sans-serif;
                font-weight: 500;
                letter-spacing: 0.5px;
            }

            .btn-sm {
                font-size: 0.8rem;
                padding: 0.25rem 0.5rem;
            }

            /* Card Typography */
            .card-title {
                font-family: 'Montserrat', sans-serif;
                font-weight: 600;
                color: #333;
            }

            .card-text {
                font-family: 'Poppins', sans-serif;
                color: #555;
            }

            /* Đảm bảo nội dung hiển thị đúng */
            .container {
                position: relative;
                z-index: 1;
            }

            /* Admin footer styling */
            .admin-footer {
                text-align: center;
                background-color: rgba(255, 255, 255, 0.8);
                padding: 15px 0;
                border-top: 1px solid rgba(0, 0, 0, 0.05);
                margin-top: 20px;
                border-radius: 0 0 8px 8px;
            }

            .admin-footer-logo {
                font-family: 'Montserrat', sans-serif;
                font-weight: 700;
                color: #1e3c72;
                font-size: 1.2rem;
                letter-spacing: 1px;
            }

            .admin-footer-text {
                font-family: 'Poppins', sans-serif;
                color: #6c757d;
                margin-bottom: 0;
                font-size: 0.9rem;
            }

            /* Form Controls */
            .form-control, .form-select {
                font-family: 'Poppins', sans-serif;
                font-size: 0.95rem;
            }

            .form-label {
                font-family: 'Poppins', sans-serif;
                font-weight: 500;
                color: #444;
            }

            /* Navigation */
            .nav-link {
                font-family: 'Montserrat', sans-serif;
                font-weight: 500;
            }

            /* Breadcrumb */
            .breadcrumb {
                font-family: 'Poppins', sans-serif;
                font-size: 0.9rem;
            }
    body 
        include ../partials/header.pug

        .body 
            include ../partials/sider.pug
            .main 
                block main
                
                .admin-footer
                    .admin-footer-logo LMQ Company
                    p.admin-footer-text Hệ thống quản trị doanh nghiệp chuyên nghiệp
                    p.admin-footer-text &copy; 2025 LMQ Company. Tất cả quyền được bảo lưu.
                    p.admin-footer-text
                        | Địa chỉ: 123 Đường ABC, Quận XYZ, Hà Nội | Hotline: 0123.456.789

        //-nhung bootstrap va file public
        script(src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js")
        script(src="/admin/js/script.js")