doctype html 
html 
    head 
        title #{pageTitle}
        //-nhung bootstrap
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css")
        link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css")
        //-nhung file public 
        link(rel="stylesheet", href="/admin/css/style.css")
        style.
            body {
                background-image: url('/images/background.jpg');
                background-size: cover;
                background-position: center;
                background-attachment: fixed; /* Giữ ảnh cố định khi cuộn trang */
                background-repeat: no-repeat;
                position: relative;
                min-height: 100vh;
                font-family: 'Poppins', sans-serif;
            }

            body::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background-color: rgba(0, 0, 0, 0.65); /* Tối hơn để tạo cảm giác sang trọng */
                z-index: -1;
            }

            /* Đảm bảo nội dung hiển thị đúng */
            .container {
                position: relative;
                z-index: 1;
            }
            
            /* Style cho logo công ty */
            .company-logo {
                text-align: center;
                margin-bottom: 2rem;
                padding-top: 2rem;
            }
            
            .company-logo h1 {
                color: #ffffff;
                font-size: 2.5rem;
                font-weight: 700;
                letter-spacing: 1px;
                text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
                margin-bottom: 0.5rem;
            }
            
            .company-logo p {
                color: #f8f9fa;
                font-size: 1.2rem;
                letter-spacing: 1px;
                opacity: 0.8;
            }
            
            /* Bo tròn card */
            .card {
                border-radius: 15px;
                box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
                backdrop-filter: blur(5px);
                background-color: rgba(255, 255, 255, 0.9);
                border: none;
                overflow: hidden;
            }
            
            .card-header {
                background: linear-gradient(45deg, #1e3c72, #2a5298);
                color: white;
                text-align: center;
                font-weight: 600;
                padding: 1.2rem;
                border-radius: 15px 15px 0 0 !important;
            }
            
            .btn-primary {
                background: linear-gradient(45deg, #1e3c72, #2a5298);
                border: none;
                padding: 0.6rem 1.5rem;
                border-radius: 30px;
                font-weight: 500;
                transition: all 0.3s;
                box-shadow: 0 4px 15px rgba(30, 60, 114, 0.3);
            }
            
            .btn-primary:hover {
                transform: translateY(-3px);
                box-shadow: 0 6px 20px rgba(30, 60, 114, 0.4);
            }
            
            /* Hiệu ứng cho form input */
            .form-control {
                border-radius: 30px;
                padding: 0.75rem 1.5rem;
                border: 1px solid #ddd;
                transition: all 0.3s;
            }
            
            .form-control:focus {
                box-shadow: 0 0 0 3px rgba(42, 82, 152, 0.2);
                border-color: #2a5298;
            }
            
            /* Footer thông tin */
            .auth-footer {
                text-align: center;
                color: #ffffff;
                margin-top: 2rem;
                font-size: 0.9rem;
                opacity: 0.7;
            }
