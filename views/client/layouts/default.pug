        style.
            body {
                background-image: url('/images/background.jpg'); /* Đường dẫn đến ảnh nền */
                background-size: cover;
                background-position: center;
                background-attachment: fixed; /* Giữ ảnh cố định khi cuộn trang */
                background-repeat: no-repeat;
                position: relative;
                min-height: 100vh;
                font-family: 'Poppins', sans-serif;
                color: #333;
            }

            body::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background-color: rgba(255, 255, 255, 0.85); /* Độ trong suốt nhẹ hơn */
                z-index: -1;
            }

            /* Typography */
            h1, h2, h3, h4, h5, h6 {
                font-family: 'Montserrat', sans-serif;
                font-weight: 600;
                color: #2a5298;
            }

            p {
                font-family: 'Poppins', sans-serif;
                line-height: 1.6;
            }

            /* Card styling */
            .card {
                border: none;
                border-radius: 10px;
                box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
                transition: all 0.3s ease;
                overflow: hidden;
            }

            .card:hover {
                transform: translateY(-5px);
                box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
            }

            .card-img-top {
                transition: all 0.5s ease;
            }
            
            .card:hover .card-img-top {
                transform: scale(1.05);
            }

            .card-title {
                font-family: 'Montserrat', sans-serif;
                font-weight: 600;
            }

            /* Button styling */
            .btn {
                border-radius: 30px;
                padding: 0.5rem 1.5rem;
                font-family: 'Montserrat', sans-serif;
                font-weight: 500;
                letter-spacing: 0.5px;
                transition: all 0.3s ease;
            }

            .btn-primary {
                background: linear-gradient(45deg, #1e3c72, #2a5298);
                border: none;
                box-shadow: 0 4px 15px rgba(30, 60, 114, 0.3);
            }

            .btn-primary:hover {
                transform: translateY(-3px);
                box-shadow: 0 6px 20px rgba(30, 60, 114, 0.4);
            }

            .btn-outline-primary {
                border-color: #2a5298;
                color: #2a5298;
            }

            .btn-outline-primary:hover {
                background-color: #2a5298;
                color: white;
                transform: translateY(-3px);
                box-shadow: 0 6px 20px rgba(30, 60, 114, 0.2);
            }

            /* Form control */
            .form-control {
                border-radius: 30px;
                padding: 0.75rem 1.5rem;
                font-family: 'Poppins', sans-serif;
            }

            /* Nav styling */
            .nav-link {
                font-family: 'Montserrat', sans-serif;
                font-weight: 500;
            }

            /* Alert styling */
            .alert {
                border-radius: 10px;
                border: none;
            }

            /* Price styling */
            .price {
                font-family: 'Montserrat', sans-serif;
                font-weight: 700;
                color: #e44d26;
            }

            .price-old {
                text-decoration: line-through;
                color: #999;
                font-weight: 400;
            }

            /* Badge styling */
            .badge {
                font-family: 'Montserrat', sans-serif;
                font-weight: 600;
                padding: 0.5em 1em;
                border-radius: 30px;
            }

            /* Footer styling */
            .client-footer {
                background-color: #1e3c72;
                color: white;
                padding: 4rem 0 2rem;
                margin-top: 4rem;
            }

            .footer-heading {
                font-family: 'Montserrat', sans-serif;
                font-weight: 600;
                color: white;
                margin-bottom: 1.5rem;
            }

            .footer-link {
                color: rgba(255, 255, 255, 0.8);
                text-decoration: none;
                transition: all 0.3s;
                display: block;
                margin-bottom: 0.5rem;
            }

            .footer-link:hover {
                color: white;
                transform: translateX(5px);
            }

            .footer-social .btn {
                color: white;
                background-color: rgba(255, 255, 255, 0.1);
                border-radius: 50%;
                width: 40px;
                height: 40px;
                padding: 0;
                line-height: 40px;
                text-align: center;
                margin-right: 10px;
                transition: all 0.3s;
            }

            .footer-social .btn:hover {
                background-color: white;
                color: #1e3c72;
                transform: translateY(-5px);
            }

            .footer-bottom {
                border-top: 1px solid rgba(255, 255, 255, 0.1);
                padding-top: 1.5rem;
                margin-top: 3rem;
                text-align: center;
                color: rgba(255, 255, 255, 0.7);
            }

            /* Đảm bảo nội dung hiển thị đúng */
            .container {
                position: relative;
                z-index: 1;
            }
        
        block style
